    <div class="px-4 py-8 sm:px-6 lg:px-8">
        <h1>Articles index</h1>
    
        <table class="w-full border-collapse bg-white text-left text-sm text-gray-500 mb-5">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Id</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Title</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Content</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Status</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 border-t border-gray-100">
                {% for article in articles %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">{{ article.id }}</td>
                        <td class="px-6 py-4">{{ article.title }}</td>
                        <td class="px-6 py-4">{{ article.content }}</td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-semibold {{ article.status == 'APPROVED' ? 'bg-green-50 text-green-600' : 'bg-yellow-200 text-yellow-600' }}">
